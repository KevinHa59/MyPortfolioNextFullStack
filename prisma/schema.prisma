generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  firstName  String?
  lastName  String?
  dob DateTime
  password String?
  userTypeID String
  userType UserTypes @relation(fields: [userTypeID], references: [id])

  @@map("users")
}

model UserTypes {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  type String @unique
  description String? @default("")
  color String?
  users Users[]
  @@map("user_types")
}
